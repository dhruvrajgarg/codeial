<h1>
    Codeial / <%= title %>
</h1>

<section id="feed-posts">
    <h4> Posts </h4>
    <%if(locals.user){%>
    <form action="/posts/create" method="POST">
        <textarea name="content" cols="50" rows="3" placeholder="Type Here..." required></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div class="posts-container">
        <ul class="posts-list">
            <% for(post of posts){ %>
                <%- include('_post.ejs') -%>
            <%}%>
        </ul>
    </div>
</section>