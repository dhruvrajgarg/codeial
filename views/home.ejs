<h1>
    Codeial / <%= title %>
</h1>

<section id="feed-posts">
    <h4> Posts </h4>
    <%if(locals.user){%>
    <form action="/posts/create" method="POST">
        <textarea name="content" cols="50" rows="3" placeholder="Type Here..."></textarea>
        <input type="submit" value="Post">
    </form>
    <%}%>
    <div class="posts-container">
        <ul class="posts">
            <%for(let post of posts){ %>
                <li>
                    <p>
                        <%= post.content %>
                    </p>
                    <small>
                        <%= post.user.name %>
                    </small>
                </li>
            <%}%>
        </ul>
    </div>
</section>